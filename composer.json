{
  "require": {
    "php": "^8.1",
    "ext-intl": "*",
    "ext-dom": "*",
    "getkirby/cms": "^4.0.0-rc.3",
    "fabianmichael/kirby-meta": "@dev",
    "arnoson/kirby-vite": "^5.0",
    "fabianmichael/kirby-template-attributes": "^1.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.39"
  },
  "scripts": {
    "linter": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "linter:fix": "vendor/bin/php-cs-fixer fix --diff"
  },
  "config": {
      "optimize-autoloader": true,
      "allow-plugins": {
          "getkirby/composer-installer": true
      }
  }
}
